<h1>Editing Book</h1>
<% if @book.errors.any? %>
 <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url: book_path,method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %>

  <br><%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show",book_path(@book.id) %> | <%= link_to "Back",books_path %>